{% schema %}
{
  "name": "Responsive Banner Bottom",
  "tag": "section",
  "class": "responsive-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "select",
      "id": "banner_height",
      "label": "Banner Height",
      "default": "auto",
      "options": [
        { "value": "auto", "label": "Auto (natural image height)" },
        { "value": "100px", "label": "100px" },
        { "value": "300px", "label": "300px" },
        { "value": "500px", "label": "500px" },
        { "value": "700px", "label": "700px" },
        { "value": "100vh", "label": "100vh" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Responsive Banner Bottom",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% assign height = section.settings.banner_height %}
{% if height != 'auto' %}
  {% assign height_style = 'height: ' | append: height %}
{% else %}
  {% assign height_style = '' %}
{% endif %}

{% style %}
  .responsive-banner img {
    width: 100%;
    display: block;
    object-fit: cover;
  }

  @media screen and (max-width: 749px) {
    .responsive-banner .desktop-banner {
      display: none;
    }
  }

  @media screen and (min-width: 750px) {
    .responsive-banner .mobile-banner {
      display: none;
    }
  }
{% endstyle %}

<div class="responsive-banner">
  {% if section.settings.mobile_image %}
    <img
      class="mobile-banner"
      src="{{ section.settings.mobile_image | image_url: width: 750 }}"
      alt="Mobile Banner"
      loading="lazy"
      style="{{ height_style }}"
    >
  {% endif %}
  {% if section.settings.desktop_image %}
    <img
      class="desktop-banner"
      src="{{ section.settings.desktop_image | image_url: width: 1500 }}"
      alt="Desktop Banner"
      loading="lazy"
      style="{{ height_style }}"
    >
  {% endif %}
</div>
