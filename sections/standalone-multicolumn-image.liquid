{%- comment -%}
  Section: Image with Multi-Column Features | Author: Nouman Akbar
  Description: Two-column layout with an image container and a multi-column feature grid.
  Github: https://github.com/Nouman-Akbar | LinkedIn: https://www.linkedin.com/in/nouman-akbar-developer/
{%- endcomment -%}

{%- comment -%} 
  Step 1: Preload fonts for early discovery 
  {{ section.settings.heading_font | font_url | preload_tag: as: 'font', type: 'font/woff2', crossorigin: 'anonymous' }}
  {{ section.settings.body_font | font_url | preload_tag: as: 'font', type: 'font/woff2', crossorigin: 'anonymous' }}
{%- endcomment -%}

{%- style -%}
  {%- comment -%} Step 2: Generate @font-face declarations {%- endcomment -%}
  {{ section.settings.heading_font | font_face: font_display: 'swap' }}
  {{ section.settings.body_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    --section-bg: {{ section.settings.section_bg_color }};
    --section-text: {{ section.settings.section_text_color }};
    --section-heading: {{ section.settings.section_heading_color }};
    --section-description: {{ section.settings.section_description_color }};
    --card-bg: {{ section.settings.card_bg_color }};
    --card-heading: {{ section.settings.card_heading_color }};
    --card-text: {{ section.settings.card_text_color }};
    --icon-bg: {{ section.settings.icon_bg_color }};
    --icon-color: {{ section.settings.icon_color }};
    --gap-main-mobile: {{ section.settings.main_gap_mobile }}px;
    --gap-main-desktop: {{ section.settings.main_gap_desktop }}px;
    --gap-columns-mobile: {{ section.settings.columns_gap_mobile }}px;
    --gap-columns-desktop: {{ section.settings.columns_gap_desktop }}px;

    background-color: var(--section-bg);
    color: var(--section-text);
    padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_horizontal_mobile }}px {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_horizontal_desktop }}px {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  .section-{{ section.id }} .section-inner {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--gap-main-mobile);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .section-inner {
      flex-direction: row;
      align-items: stretch;
      gap: var(--gap-main-desktop);
    }
  }

  .section-{{ section.id }}.layout-desktop-image-right .section-inner {
    /* desktop image on the right */
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}.layout-desktop-image-right .section-inner {
      flex-direction: row-reverse;
    }
  }

  .section-{{ section.id }}.layout-mobile-image-bottom .section-inner {
    /* image below columns on mobile */
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }}.layout-mobile-image-bottom .section-inner {
      flex-direction: column-reverse;
    }
  }

  .section-{{ section.id }} .image-container,
  .section-{{ section.id }} .columns-container {
    flex: 1 1 0;
  }

  .section-{{ section.id }} .image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_radius }}px;
  }

  .section-{{ section.id }} .image-media {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
  }

  .section-{{ section.id }} .section-header {
    text-align: {{ section.settings.section_header_alignment }};
    margin-bottom: {{ section.settings.section_header_spacing_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .section-header {
      margin-bottom: {{ section.settings.section_header_spacing_desktop }}px;
    }
  }

  .section-{{ section.id }} .section-title {
    font-family: 'Room205';
    font-weight: {{ section.settings.section_heading_weight }};
    font-size: {{ section.settings.section_heading_size_mobile }}px;
    line-height: {{ section.settings.section_heading_line_height }};
    letter-spacing: {{ section.settings.section_heading_letter_spacing }}px;
    color: var(--section-heading);
    margin: 0 0 {{ section.settings.section_heading_spacing }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .section-title {
      font-size: {{ section.settings.section_heading_size_desktop }}px;
    }
  }

  .section-{{ section.id }} .section-description {
/*    font-family: {{ section.settings.body_font.family }}, {{ section.settings.body_font.fallback_families }};
 */   font-size: {{ section.settings.section_description_size_mobile }}px;
    line-height: {{ section.settings.section_description_line_height }};
    letter-spacing: {{ section.settings.section_description_letter_spacing }}px;
    color: var(--section-description);
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .section-description {
      font-size: {{ section.settings.section_description_size_desktop }}px;
    }
  }

  .section-{{ section.id }} .columns-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_per_row_mobile }}, minmax(0, 1fr));
    gap: var(--gap-columns-mobile);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .columns-grid {
      grid-template-columns: repeat({{ section.settings.columns_per_row_desktop }}, minmax(0, 1fr));
      gap: var(--gap-columns-desktop);
      height: 100%;
    }
  }

  .section-{{ section.id }} .feature-card {
    background-color: var(--card-bg);
    color: var(--card-text);
    border-radius: {{ section.settings.card_radius }}px;
    padding: {{ section.settings.card_padding_mobile }}px;
    text-align: left;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.card_content_gap }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .feature-card {
      padding: {{ section.settings.card_padding_desktop }}px;
      text-align: {{ section.settings.card_text_alignment }};
      justify-content: center;
    }
  }

  .section-{{ section.id }} .feature-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    border-radius: {{ section.settings.icon_radius }}px;
    background-color: var(--icon-bg);
    color: var(--icon-color);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .section-{{ section.id }} .feature-icon img,
  .section-{{ section.id }} .feature-icon svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .section-{{ section.id }} .feature-heading {
/*    font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
 */   font-weight: {{ section.settings.column_heading_weight }};
    font-size: {{ section.settings.column_heading_size_mobile }}px;
    line-height: {{ section.settings.column_heading_line_height }};
    letter-spacing: {{ section.settings.column_heading_letter_spacing }}px;
    color: var(--card_heading);
    margin: 0;
    text-wrap: balance;
  }

  .card_header{
    display: flex;
    align-items: center;
    gap: {{ section.settings.icon_spacing }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .feature-heading {
      font-size: {{ section.settings.column_heading_size_desktop }}px;
    }
    
    .card_header{
        flex-direction: column;
    }
  }

  .section-{{ section.id }} .feature-description {
    /*font-family: {{ section.settings.body_font.family }}, {{ section.settings.body_font.fallback_families }};*/
    font-size: {{ section.settings.column_description_size_mobile }}px;
    line-height: {{ section.settings.column_description_line_height }};
    letter-spacing: {{ section.settings.column_description_letter_spacing }}px;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .feature-description {
      font-size: {{ section.settings.column_description_size_desktop }}px;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .section-{{ section.id }} .feature-card {
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .section-{{ section.id }} .feature-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }
  }
{%- endstyle -%}

{%- assign has_image = false -%}
{%- if section.settings.enable_image and section.settings.image_desktop != blank -%}
  {%- assign has_image = true -%}
{%- elsif section.settings.enable_image and section.settings.image_mobile != blank -%}
  {%- assign has_image = true -%}
{%- endif -%}

<section class="section-{{ section.id }} layout-desktop-image-{{ section.settings.desktop_image_position }} layout-mobile-image-{{ section.settings.mobile_image_position }}" aria-labelledby="section-heading-{{ section.id }}">
  <div class="section-inner">
    {%- if has_image -%}
      <div class="image-container">
        <div class="image-wrapper">
          {% if section.settings.image_mobile != blank or section.settings.image_desktop != blank %}
            <picture>
              {% if section.settings.image_mobile != blank %}
                <source media="(max-width: 749px)" srcset="{{ section.settings.image_mobile | image_url: width: 900 }}">
              {% endif %}
              {% if section.settings.image_desktop != blank %}
                <img
                  class="image-media"
                  src="{{ section.settings.image_desktop | image_url: width: 1600 }}"
                  alt="{{ section.settings.image_desktop.alt | default: section.settings.section_heading }}"
                  loading="lazy"
                  width="1600"
                  height="900">
              {% elsif section.settings.image_mobile != blank %}
                <img
                  class="image-media"
                  src="{{ section.settings.image_mobile | image_url: width: 1200 }}"
                  alt="{{ section.settings.image_mobile.alt | default: section.settings.section_heading }}"
                  loading="lazy"
                  width="1200"
                  height="900">
              {% endif %}
            </picture>
          {% endif %}
        </div>
      </div>
    {%- endif -%}

    <div class="columns-container">
        {% if section.settings.section_heading != blank or section.settings.section_description != blank %}
            <header class="section-header">
                {% if section.settings.section_heading != blank %}
                    <h2 id="section-heading-{{ section.id }}" class="section-title">{{ section.settings.section_heading }}</h2>
                {% endif %}
                {% if section.settings.section_description != blank %}
                    <div class="section-description">{{ section.settings.section_description }}</div>
                {% endif %}
            </header>
        {% endif %}

      <div class="columns-grid" role="list">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            <article class="feature-card" {{ block.shopify_attributes }} role="listitem">
                <div class="card_header">
                    {% if block.settings.icon_image != blank or block.settings.icon_svg != blank %}
                        <div class="feature-icon" aria-hidden="true">
                        {% if block.settings.icon_image != blank %}
                            <img src="{{ block.settings.icon_image | image_url: width: 120 }}" alt="" loading="lazy">
                        {% else %}
                            {{ block.settings.icon_svg }}
                        {% endif %}
                        </div>
                    {% endif %}

                    {% if block.settings.heading != blank %}
                        <h3 class="feature-heading">{{ block.settings.heading }}</h3>
                    {% endif %}
                </div>

              {% if block.settings.description != blank %}
                <div class="feature-description">{{ block.settings.description }}</div>
              {% endif %}
            </article>
          {% endfor %}
        {% else %}
          {% for i in (1..4) %}
            <article class="feature-card" role="listitem">
              <div class="feature-icon" aria-hidden="true">
                {{ 'image' | placeholder_svg_tag }}
              </div>
              <h3 class="feature-heading">Feature {{ i }}</h3>
              <div class="feature-description">Add your feature description here.</div>
            </article>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</section>

