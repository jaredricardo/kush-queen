<section class="newtab-section" style="background-color: {{ section.settings.bg_color }};">
  <svg
    class="editorial"
    xmlns="http://www.w3.org/2000/svg"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    viewBox="0 24 150 28 "
    preserveAspectRatio="none"
  >
    <defs>
    <path id="gentle-wave" d="M-160 44c30 0
       58-18 88-18s
       58 18 88 18
       58-18 88-18
       58 18 88 18
       v44h-352z"></path>
     </defs>
     <g class="parallax1">
      <use xlink:href="#gentle-wave" x="50" y="3" fill="white"></use>
     </g>
       <g class="parallax2">
      <use xlink:href="#gentle-wave" x="50" y="0" fill="#f3f2ea85"></use>
       </g>
         <g class="parallax3">
      <use xlink:href="#gentle-wave" x="50" y="9" fill="#f3f2ead9"></use>
      </g>
       <g class="parallax4">
      <use xlink:href="#gentle-wave" x="50" y="6" fill="{{ section.settings.bg_color }}"></use>
     </g>
  </svg>
  <div class="page-width-2">
    <div class="newtab-header">
      <p class="newtab-section_caption">{{ section.settings.caption_text }}</p>
      <h2>{{ section.settings.section_heading }}</h2>
    </div>

    <div class="newtab-buttons">
      {% for block in section.blocks %}
        <button class="newtab-btn {% if forloop.first %}active{% endif %}" data-tab="newtab-{{ forloop.index }}">
          {{ block.settings.tab_title }}
        </button>
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      <div class="newtab-content {% if forloop.first %}active{% endif %}" id="newtab-{{ forloop.index }}">
        <div class="newtab-text">
          <div>{{ block.settings.tab_text }}</div>
        </div>
        <div
          class="
            newtab-gallery
            {% if block.settings.image_3 != blank %}grid-with3
            {% elsif block.settings.image_2 != blank %}grid-with2
            {% elsif block.settings.image_1 != blank %}grid-only1
            {% endif %}
          "
        >
          {% if block.settings.image_1 != blank %}
            <img src="{{ block.settings.image_1 | img_url: 'master' }}" alt="Gallery Image 1" style='object-fit: {% if block.settings.image_2 == blank %}contain{% else %}cover{% endif %};'>

          {% endif %}
          {% if block.settings.image_2 != blank %}
            <img src="{{ block.settings.image_2 | img_url: 'master' }}" alt="Gallery Image 2">

          {% endif %}
          {% if block.settings.image_3 != blank %}
            <img src="{{ block.settings.image_3 | img_url: 'master' }}" alt="Gallery Image 3">

          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
    .newtab-text ol {
      text-align: left;
      list-style-type: decimal; /* Explicitly setting the list style type */
      list-style-position: inside;
      padding-left: 1rem;
    }

    .newtab-text ul {
      text-align: left;
      list-style-type: disc; /* For unordered lists, if needed */
      list-style-position: inside;
      padding-left: 1rem;
    }
    .newtab-text ol li {
      list-style-type: decimal;
      list-style-position: inside;
    }

    .newtab-text ul li {
      list-style-type: disc;
      list-style-position: inside;
    }

    .newtab-text ol,
    .newtab-text ul {
      padding-left: 1.5rem; /* Adjust as needed */
    }

    .newtab-text li {
      margin-bottom: 3rem;
    }

    .newtab-section {
      padding: 6rem;
      text-align: center;
      color: #222;
      padding-inline: 12rem;
      position: relative;
      padding-bottom: 15rem;
    }

    .newtab-header p {
      font-size: 13px;
      margin-bottom: 7px;
      letter-spacing: 0.07em;
    }

    .newtab-buttons {
      display: flex;
      justify-content: center;
      justify-content: space-around;
      margin-bottom: 1rem;
    }

    .newtab-btn {
      padding: 0.5rem 1rem;
      margin: 0 0.5rem;
      background: none;
      border: none;
      border-bottom: 2px solid #58585838;
      cursor: pointer;
      transition: border-color 0.3s;
      color: #585858;
      font-weight:500;
      text-align: center;
      width: 100%;
      margin-inline: 0;
      font-size: 17px;
      border-block-width: 4px;
      padding-bottom:2rem;
    }
    .newtab-section_caption {
      font-size: 13px;
      font-style: normal;
      font-weight: 700;
      line-height: 16px;
    }
    .newtab-header h2 {
      font-family: Room205;
      font-size: 40px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      padding-bottom:15px;
      text-transform: none;
    }
    .newtab-text{
      font-size: 18px;
      line-height: 28px;
    }
    .newtab-btn.active {
      border-bottom-color: #191919;
      color: #222;
      font-weight:700;
    }

    .newtab-section .newtab-content {
      display: none;
      grid-template-columns: 2fr 1fr;
      gap: 6rem;
      align-items: center;
    }

    .newtab-section .newtab-content.active {
      display: grid;
    }

    .newtab-gallery img {
      width: 100%;
      object-fit: cover;
      margin-bottom: 1rem;
    }
    .newtab-gallery {
      display: grid;
      gap: 1rem;
    }
    /* Default grid for 1 image */
    .grid-only1 {
      display: grid;
      grid-template-columns: 1fr;
    }

    /* Grid for 2 images */
    .grid-with2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    /* Grid for 3 images */
    .grid-with3 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: repeat(2, 1fr);
    }

    .grid-with3 img:nth-child(3) {
      grid-column: 1 / span 2;
      grid-row: 2;
    }

    .newtab-gallery img {
      width: 100%;
      height: 100%; /* Ensuring the images cover the entire grid cell */
      object-fit: cover;
      margin-bottom: 1rem;
    }
    .newtab-text div{
      text-align:left;
    }
  @media(min-width:768px){
    .newtab-section .newtab-content{
      padding-top:70px;
    }
  }
    @media (max-width: 768px) {
      .newtab-section .newtab-content {
        grid-template-columns: 1fr;
        gap:3rem;
      }
      .grid-with2 {
        grid-template-columns: 1fr;
      }
      .newtab-section {
        padding-inline: 3rem;
      }
      .newtab-section_caption{
        font-size: 12px;
      }
      .newtab-header h2{
        font-size: 26px;
      }
      .newtab-btn{
        font-size: 14px;
      }
      .newtab-text{
        font-size: 14px;
        line-height: 24px;
        margin-top: 3rem;
      }
      .newtab-text li {
        margin-bottom: 1rem;
      }
    }

  .newtab-section .editorial {
    display: block;
    width: 100%;
    height: 60px;
    max-height: 60px;
    margin: 0;
    z-index: 1;
        top: -6rem;
    position:absolute;
    left:0px;
    float:left;
  }

  .newtab-section .parallax1 > use {
    animation: move-forever1 10s linear infinite;
  }
  .newtab-section .parallax2 > use {
    animation: move-forever2 8s linear infinite;
  }
  .newtab-section .parallax3 > use {
    animation: move-forever3 6s linear infinite;
  }
  .newtab-section .parallax4 > use {
    animation: move-forever4 4s linear infinite;
  }
  @keyframes move-forever1 {
    0% {
      transform: translate(85px, 0%);
    }
    100% {
      transform: translate(-90px, 0%);
    }
  }
  @keyframes move-forever2 {
    0% {
      transform: translate(-90px, 0%);
    }
    100% {
      transform: translate(85px, 0%);
    }
  }
  @keyframes move-forever3 {
    0% {
      transform: translate(85px, 0%);
    }
    100% {
      transform: translate(-90px, 0%);
    }
  }
  @keyframes move-forever4 {
    0% {
      transform: translate(-90px, 0%);
    }
    100% {
      transform: translate(85px, 0%);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('.newtab-btn');
    const contents = document.querySelectorAll('.newtab-content');

    if (!tabs.length || !contents.length) {
      console.warn('Tabs or contents not found!');
      return;
    }

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        // Remove active class from all tabs and contents
        tabs.forEach((innerTab) => innerTab.classList.remove('active'));
        contents.forEach((content) => content.classList.remove('active'));

        // Add active class to the clicked tab
        tab.classList.add('active');

        // Add active class to the corresponding content
        const contentToShow = document.getElementById(tab.dataset.tab);
        if (contentToShow) {
          contentToShow.classList.add('active');
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "New Tab Section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "caption_text",
      "label": "Caption Text",
      "default": "Caption Here"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Heading Here"
    }
  ],
  "blocks": [
    {
      "type": "tab_block",
      "name": "Tab Block",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Tab Title"
        },
        {
          "type": "richtext",
          "id": "tab_text",
          "label": "Tab Text",
          "default": "<p>Tab content here</p>"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "image_3",
          "label": "Image 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Tab Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
