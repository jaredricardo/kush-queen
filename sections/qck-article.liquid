<article class="qck__article-template qck__article" itemscope itemtype="http://schema.org/BlogPosting">
  <div id="{{ section.id }}" class="qck__main-home-hero-wrapper" style="margin-top: 0;">
    <div class="qck__page-width">
      <div class="qck__main-home-hero-inner">
      <div class="qck__main-home-hero-inner-wrp qck__main-home-hero-slider">
        {%- liquid
          assign image = article.image.src
          assign mobileImage = article.image.src
          assign title = article.title
        -%}

        <div class="qck__main-home-hero-header-slide qck__main-home-hero-slide-image qck__h-small">
          <div class="qck__image-section">
            <div class="qck__image-wrapper">
              {% if image != blank %}
                <img
                  class="qck__desktop-only"
                  style="height: 100%; object-fit: cover;"
                  src="{{ image | image_url: width: 1500 }}"
                  alt="{{ image.alt }}"
                >
              {% endif %}
              {% if mobileImage != blank %}
                <img
                  class="qck__mobile-only"
                  style="height: 100%; object-fit: cover;"
                  src="{{ mobileImage | image_url: width: 991 }}"
                  alt="{{ mobileImage.alt }}"
                >
              {% endif %}
            </div>
            <div class="qck__dark-bg"></div>
          </div>

          <div class="qck__slide-content qck__scroll-trigger qck__animate--slide-in qck__aligned-center">
            <h1
              class="qck__article-template__title qck__text-white"
              itemprop="headline"
            >
              {{ article.title | escape }}
            </h1>

            <div class="qck__d-flex">
              <span
                class="qck__circle-divider qck__caption-with-letter-spacing qck__text-white"
                itemprop="dateCreated pubdate datePublished"
              >
                {{- article.published_at | time_tag: format: 'date' -}}
              </span>
              <span
                class="qck__caption-with-letter-spacing qck__text-white"
                itemprop="author"
                itemscope
                itemtype="http://schema.org/Person"
              >
                <span itemprop="name">{{ article.author }}</span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
      <div class="qck__main-article-wrapper qck__enable_side_bar">
        <div class="qck__main-article-content-wrapper">
          <div
            class="qck__article-template__content qck__rte{% if settings.animations_reveal_on_scroll %} qck__scroll-trigger qck__animate--slide-in{% endif %}"
            itemprop="articleBody"
          >
            {{ article.content }}
          </div>
          <div class="qck__social-sharing">
            {% if article.tags.size > 0 %}
              <p class="qck__capitalize qck__tags qck__d-inline-block">
                tags:
                {% for tag in article.tags %}
                  <span class="qck__d-inline-block">
                    {{- tag -}}
                    <span>,</span></span>
                {% endfor %}
              </p>
            {% endif %}
          </div>
        </div>
       <div class="qck__main-article-sidebar">
         {% if section.settings.show_newsletter %}
                <div class="qck__article-item qck__article-newsletter">
                  <div class="qck__article-newsletter--wrapper qck__center">
                    {% if section.settings.nl_heading != blank %}
                    <h4 class="qck__article-newsletter--heading">{{ section.settings.nl_heading }}</h4>
                    {% endif %}
                    {% if section.settings.nl_text != blank %}
                    <div class="qck__article-newsletter-text qck__rte">{{ section.settings.nl_text }}</div>
                    {% endif %}
                 {% if section.settings.klaviyo_form != blank %}
          {{ section.settings.klaviyo_form }}
          {% else %}
                    <div class="qck__article-newsletter--form" >
                      {% form 'customer', class: 'qck__newsletter-form' %}
                        <input type="hidden" name="contact[tags]" value="newsletter">
                        <div
                          class="qck__newsletter-form__field-wrapper{% if settings.animations_reveal_on_scroll %} qck__scroll-trigger qck__animate--slide-in{% endif %}"
                          {% if settings.animations_reveal_on_scroll %}
                            data-cascade
                            style="--animation-order: {{ forloop.index }};"
                          {% endif %}
                        >
                          <div class="qck__field">
                            <input
                              id="NewsletterForm--{{ section.id }}"
                              type="email"
                              name="contact[email]"
                              class="qck__field__input"
                              value="{{ form.email }}"
                              aria-required="true"
                              autocorrect="off"
                              autocapitalize="off"
                              autocomplete="email"
                              {% if form.errors %}
                                autofocus
                                aria-invalid="true"
                                aria-describedby="Newsletter-error--{{ section.id }}"
                              {% elsif form.posted_successfully? %}
                                aria-describedby="Newsletter-success--{{ section.id }}"
                              {% endif %}
                              placeholder=""
                              required
                            >
                            <label class="qck__field__label" for="NewsletterForm--{{ section.id }}">
                              Enter your email
                            </label>
                            <button
                              type="submit"
                              class="qck__newsletter-form__button qck__field__button qck__btn"
                              name="commit"
                              id="Subscribe"
                              aria-label="SIGN ME UP!"
                            >
                             SIGN ME UP!
                            </button>
                          </div>
                          {%- if form.errors -%}
                            <small class="qck__newsletter-form__message qck__form__message" id="Newsletter-error--{{ section.id }}">
                              <svg aria-hidden="true" focusable="false" class="qck__icon qck__icon-error" viewBox="0 0 13 13">
                                <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                                <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                                <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                                <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7"/>
                              </svg>

                              {{- form.errors.translated_fields.email | capitalize }}
                              {{ form.errors.messages.email -}}
                            </small>
                          {%- endif -%}
                        </div>
                        {%- if form.posted_successfully? -%}
                          <h3
                            class="qck__newsletter-form__message qck__newsletter-form__message--success qck__form__message"
                            id="Newsletter-success--{{ section.id }}"
                            tabindex="-1"
                            autofocus
                          >
                            <svg aria-hidden="true" focusable="false" class="qck__icon qck__icon-success" viewBox="0 0 13 13">
                              <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
                              <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
                              <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white"/>
                            </svg>

                            {{- 'newsletter.success' | t }}
                          </h3>
                        {%- endif -%}
                      {% endform %}
                    </div>
           {% endif %}
                  </div>
                </div>
               {% endif %}
          {% if article.metafields.custom.qck_product_1 %}
  <div class="qck__article-item qck__article-product">
    {%- assign product = article.metafields.custom.qck_product_1.value -%}
    <div class="qck__product-card">
      <div class="qck__product-image">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
        </a>
      </div>
      <div class="qck__product-details">
        <h3 class="qck__product-title">{{ product.title }}</h3>
        <p class="qck__product-description">
          {{ product.description | strip_html | truncatewords: 15 }}
        </p>
        <p class="qck__product-price">{{ product.price | money }}</p>
        <a href="{{ product.url }}" class="qck__shop-now-btn">Shop Now</a>
      </div>
    </div>
  </div>
{% endif %}

{% if article.metafields.custom.qck_product_2 %}
  <div class="qck__article-item qck__article-product">
    {%- assign product = article.metafields.custom.qck_product_2.value -%}
    <div class="qck__product-card">
      <div class="qck__product-image">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
        </a>
      </div>
      <div class="qck__product-details">
        <h3 class="qck__product-title">{{ product.title }}</h3>
        <p class="qck__product-description">
          {{ product.description | strip_html | truncatewords: 15 }}
        </p>
        <p class="qck__product-price">{{ product.price | money }}</p>
        <a href="{{ product.url }}" class="qck__shop-now-btn">Shop Now</a>
      </div>
    </div>
  </div>
{% endif %}
          {% if section.settings.show_helpful %}
                <div class="qck__article-item qck__article-help_links">
  {% if section.settings.hf_heading != blank %}
    <h4 class="qck__article-helpful_links--heading qck__center">{{ section.settings.hf_heading }}</h4>
  {% endif %}
  {% if section.settings.hf_text != blank %}
                    <div class="qck__article-helpful_links--text qck__rte">{{ section.settings.hf_text }}</div>
                  {% else %}
  {% if section.settings.selected_blog != blank %}
    <div class="qck__article-helpful_links--text">
      <ul class="qck__blog-list">
        {% for article in blogs[section.settings.selected_blog].articles limit: 5 %}
          <li class="qck__blog-item">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
                  {% endif %}
</div>
            {% endif %}
        </div>
      </div>
    </div>
  </div>
</article>

