{% comment %} HOMEPAGE DISPLAYED ELEMENTS {% endcomment %}
  <section class="home-featured-main-container-cards">
<div class="page-width collection-list-cards">
    <div class="home-featured-collection-cards">
      <div class="home-featured-cards-title-icon">
        {% if section.settings.icon != blank %}
            <div class="icon-container">
              {% if section.settings.icon.image.src contains ".svg" %}
                <img class="featured-icon" src="{{ section.settings.icon | img_url: 'master' }}" alt="" width="60px" height="60px">
                {% else %}
                <img class="featured-icon" src="{{ section.settings.icon | img_url: '50x50' }}" alt="">
              {% endif %}
            </div>
        {% endif %}

        <div class="queen-promise-title-wrap-cards">
          {% if section.settings.sub-title != blank %}
          <h4 role="heading" aria-level="2" class="queen-promise-subtitle-cards">{{section.settings.sub-title}}</span>
          {% endif %}
          
          {% if section.settings.title != blank %}
          <h3 role="heading" aria-level="2" class="queen-promise-title-cards">{{section.settings.title}}</h3>
          {% endif %}
        </div>
        </div>
        {% if section.settings.desc != blank %}
        <span class="queen-promise-desc-wrap-cards">{{section.settings.desc}}</span>
        {% endif %}

        {% if section.settings.col_link_text != blank %}
        <div class="queen-promise-button-wrap card-heading">
            <a class="queen-promise-cta border-rounded mobile-display-above-none" href="{{section.settings.col_link}}">
            {{section.settings.col_link_text}}
          </a>
        </div>
        {% endif %}
    </div>
<!-- PRODUCT FOR LOOP -->

{%- assign collection = collections[section.settings.collection] -%}
    <div class="swiper mySwiper featured-products">
      {% assign products = collection.products %}
      <div class="swiper-wrapper grid product-card-grid">
        {% for product in products limit:4  %}

  
        <div class="swiper-slide grid__item medium-up--one-quarter small--one-half width-fix">

          {% include 'product-card-grid-borders' %}
        </div>
        {% endfor %}
        <div class="swiper-slide hidden-card"></div>
      </div>
    

      {% comment %} button {% endcomment %}
      {% if section.settings.col_link_text != blank %}
        <div class="queen-promise-button-wrap">
            <a class="queen-promise-cta border-rounded mobile-display-below-full card-section-test" href="{{section.settings.col_link}}">
            {{section.settings.col_link_text}}
          </a>
        </div>
        {% endif %}
    </div>


    </div>
  </section>

 

  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
  <script>
    var swiper = new Swiper(".mySwiper", {
      slidesPerView: "auto",
      spaceBetween: 10,
      breakpoints:{
        569:{
          enabled: false
        }
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });

  </script>
{% schema %}
{
"name": "Featured Collection Cards",
"class": "home-featured-products-container",
"settings": [
{
"type": "image_picker",
"id": "icon",
"label": "Icon"
},
{
"type": "text",
"id": "sub-title",
"label": "Sub Heading",
"default": "Our"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Your New Wellness Obsessions"
},
{
"type": "text",
"id": "desc",
"label": "Description",
"default": "CBD products simply designed to elevate you daily."
},
{
"id": "collection",
"type": "collection",
"label": "Collection"
},
{
"id":"col_link",
"type":"url",
"label":"Link"
},
{
"id": "collection_wholesale",
"type": "collection",
"label": "Wholesale Collection"
},
{
"id":"col_link_wholesale",
"type":"url",
"label":"Wholesale Link"
},
{
"id":"col_link_text",
"type":"text",
"label":"Link text",
"default":"Shop All"
}
],
"presets": [
{
"name": "Featured Collection Cards",
"category": "Collection"
}
]
}
{% endschema %}