<section class="new-home-look-talk-wrapper">
    <div class="real-people-container">
        <div class="new-look-content real-people">
            {% if section.settings.look_subtitle != blank %}
                <div role="heading" aria-level="2" class="home-look-talk-title-wrap queen-promise-subtitle-wrap "><h4>{{section.settings.look_subtitle}}</h4></div>
            {% endif %}
            {% if section.settings.look_title != blank %}
                <div role="heading" aria-level="2" class="home-look-talk-title-wrap queen-promise-newtitle-wrap"><h2>{{section.settings.look_title}}</h2></div>
            {% endif %}
        </div>
        

      <div class="real-people-service-wrap page-width carousel-container">
          {% for block in section.blocks %}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: block %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}

          {% if block.settings.look_sing_img != blank %}
            <div class="real-people-talk-sing-wrap queen-promise-sing-wrap slide new">
              
                <div class="real-people-talk-slide" style="background-image: url('{{block.settings.look_sing_img | img_url: 'master'}}');">
                  <a href="{% if block.settings.product_link == blank %}https://kushqueen.shop/collections/all{% else %}{{ block.settings.product_link.url }}{% endif %}" class="real-people-talk-slide-cta">{{ section.settings.product_link.url }}</a>
                </div>
                {% comment %} <img class="lazyload" src="{{block.settings.look_sing_img | img_url: '300x300'}}" alt="{{block.settings.look_sing_img.alt}}"/> {% endcomment %}
            </div>
          {% endif %}
          {% endfor %}
      </div>
      
      {% if section.settings.look_talk_link != blank %}
      <div class="real-people-btn-wrap">
        <a href="{{section.settings.look_talk_link}}">
          {{section.settings.look_talk_link_text}}
        </a>
      </div>
      {% endif %}
    </div>  
</section>
<script>
    $('.carousel-container').slick({
  infinite: true,
  arrows: false,
  centerMode: false,
  slidesToShow: 4,
  responsive:[
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
        dots: true,
        centerMode: false
      }
    }
  ]
  
});
  </script>
 

{% schema %}
{
"name": "Real People Section",
"settings": [
{
"id":"look_subtitle",
"type":"text",
"label":"Subtitle"
},
{
"id":"look_title",
"type":"text",
"label":"Title"
},
{
"id":"look_talk_link",
"type":"url",
"label":"Link"
},
{
"id":"look_talk_link_text",
"type":"text",
"label":"Link text"
}
],
"blocks":[
{
"type":"look_talk",

"name":"Talking",
"settings": [
  {
  "id":"product_link",
  "type":"product",
  "label":"Product Link"
},
{
"id": "look_sing_img",
"type": "image_picker",
"label": "Image"			
},
{
"id": "look_sing_link",
"type": "url",
"label": "Link"			
}
]
}
],
"presets":[
{
"name": "Real People Section",
"category":"Image"
}
]
}
{% endschema %}