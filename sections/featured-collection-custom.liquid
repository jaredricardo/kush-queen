{% liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_count
  assign show_placeholders = false

  if request.design_mode and section.settings.enable_placeholders
    assign show_placeholders = true
  endif

  assign use_metafield = false
  if section.settings.description_source == 'metafield'
    assign use_metafield = true
  endif
%}

<style>
  #shopify-section-{{ section.id }} .product-grid-section {
    background-color: {{ section.settings.section_bg_color }};
    padding: {{ section.settings.section_padding_top_mobile }}px{{ section.settings.section_padding_horizontal_mobile }}px{{ section.settings.section_padding_bottom_mobile }}px;
  }

  #shopify-section-{{ section.id }}
  .section-heading {
    text-align: center;
    color: #000000;
    font-family: Arial
    , sans-serif;
    font-size: 28px;
    font-weight: bold;
    line-height: 1.2;
    letter-spacing: 0;
    text-transform: uppercase;
    margin: 0 0 10px;
  }

  #shopify-section-{{ section.id }}
  .section-subtitle {
    text-align: center;
    color: #666666;
    font-family: Arial
    , sans-serif;
    font-size: 14px;
    font-weight: normal;
    line-height: 1.4;
    margin: 0 auto 30px;
    max-width: 600px;
  }

  #shopify-section-{{ section.id }}
  .products-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns_mobile }}, 1fr);
    gap: 20px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  #shopify-section-{{ section.id }}
  .product-card {
    background-color: #ffffff;
    border-radius: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    height: 100%;
    text-align: center;
  }

  #shopify-section-{{ section.id }}
  .product-image-wrapper {
    background-color: #f5f5f5;
    border-radius: 0;
    overflow: hidden;
    margin-bottom: 0;
    position: relative;
  }

  #shopify-section-{{ section.id }}
  .product-image-wrapper::before {
    content: '';
    display: block;
    padding-bottom: {{ section.settings.image_aspect_ratio }}%;
  }

  #shopify-section-{{ section.id }}
  .product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  #shopify-section-{{ section.id }}
  .product-badge {
    position: absolute;
    top: {{ section.settings.badge_position_top }}px;
    right: {{ section.settings.badge_position_right }}px;
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    font-size: {{ section.settings.badge_font_size_mobile }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    padding: {{ section.settings.badge_padding_vertical }}px{{ section.settings.badge_padding_horizontal }}px;
    border-radius: {{ section.settings.badge_roundness }}px;
    text-transform: {{ section.settings.badge_text_transform }};
  }

  #shopify-section-{{ section.id }}
  .product-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 15px 10px;
  }

  #shopify-section-{{ section.id }}
  .product-reviews {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.reviews_gap }}px;
    margin-bottom: {{ section.settings.reviews_margin_bottom_mobile }}px;
  }

  #shopify-section-{{ section.id }}
  .stars {
    display: flex;
    gap: 2px;
    color: #000000;
    font-size: 12px;
  }

  #shopify-section-{{ section.id }}
  .reviews-count {
    color: {{ section.settings.reviews_text_color }};
    font-family: {{ section.settings.reviews_font_family }};
    font-size: {{ section.settings.reviews_font_size_mobile }}px;
    font-weight: {{ section.settings.reviews_font_weight }};
    line-height: {{ section.settings.reviews_line_height }};
  }

  #shopify-section-{{ section.id }}
  .product-title {
    color: #000000;
    font-family: Arial
    , sans-serif;
    font-size: 16px;
    font-weight: bold;
    line-height: 1.2;
    letter-spacing: 0;
    text-transform: none;
    margin: 0 0 8px;
  }

  #shopify-section-{{ section.id }}
  .product-description {
    color: #666666;
    font-family: Arial
    , sans-serif;
    font-size: 13px;
    font-weight: normal;
    line-height: 1.4;
    letter-spacing: 0;
    text-transform: none;
    margin: 0 0 12px;
  }

  #shopify-section-{{ section.id }}
  .product-description-item {
    display: flex;
    align-items: center;
    gap: {{ section.settings.description_item_gap }}px;
    margin-bottom: {{ section.settings.description_item_spacing }}px;
  }

  #shopify-section-{{ section.id }}.product-description-item:last-child {
    margin-bottom: 0;
  }

  #shopify-section-{{ section.id }}
  .description-icon {
    color: {{ section.settings.description_icon_color }};
    font-size: {{ section.settings.description_icon_size_mobile }}px;
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }}
  .pricing-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 12px;
    font-weight: bold;
  }

  #shopify-section-{{ section.id }}
  .current-price {
    color: {{ section.settings.current_price_color }};
    font-family: {{ section.settings.price_font_family }};
    font-size: {{ section.settings.current_price_size_mobile }}px;
    font-weight: {{ section.settings.current_price_weight }};
    line-height: 1;
  }

  #shopify-section-{{ section.id }}
  .original-price {
    color: {{ section.settings.original_price_color }};
    font-family: {{ section.settings.price_font_family }};
    font-size: {{ section.settings.original_price_size_mobile }}px;
    font-weight: {{ section.settings.original_price_weight }};
    text-decoration: line-through;
    line-height: 1;
  }

  #shopify-section-{{ section.id }}
  .sale-badge {
    background-color: {{ section.settings.sale_badge_bg_color }};
    color: {{ section.settings.sale_badge_text_color }};
    font-family: {{ section.settings.price_font_family }};
    font-size: {{ section.settings.sale_badge_size_mobile }}px;
    font-weight: {{ section.settings.sale_badge_weight }};
    padding: {{ section.settings.sale_badge_padding_vertical }}px{{ section.settings.sale_badge_padding_horizontal }}px;
    border-radius: {{ section.settings.sale_badge_roundness }}px;
    line-height: 1;
    margin-left: 5px;
  }

  #shopify-section-{{ section.id }}
  .cta-button {
    width: 100%;
    background-color: #000000;
    color: #ffffff;
    font-family: Arial
    , sans-serif;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 12px 15px;
    border: none;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    margin-top: auto;
  }

  #shopify-section-{{ section.id }}.cta-button:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
    color: {{ section.settings.button_text_hover_color }};
  }

  #shopify-section-{{ section.id }}
  .placeholder-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }}
  .placeholder-svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} .product-grid-section {
      padding: {{ section.settings.section_padding_top_desktop }}px{{ section.settings.section_padding_horizontal_desktop }}px{{ section.settings.section_padding_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .section-heading {
      text-align: {{ section.settings.heading_alignment_desktop }};
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      line-height: {{ section.settings.heading_line_height_desktop }};
      letter-spacing: {{ section.settings.heading_letter_spacing_desktop }}px;
      margin-bottom: {{ section.settings.heading_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .section-subtitle {
      text-align: {{ section.settings.heading_alignment_desktop }};
      font-size: {{ section.settings.subtitle_font_size_desktop }}px;
      margin-bottom: {{ section.settings.subtitle_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .products-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
    }

    #shopify-section-{{ section.id }}
    .product-card {
      padding: {{ section.settings.card_padding_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .product-image-wrapper {
      margin-bottom: {{ section.settings.image_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .product-badge {
      font-size: {{ section.settings.badge_font_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .product-reviews {
      margin-bottom: {{ section.settings.reviews_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .stars {
      font-size: {{ section.settings.stars_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .reviews-count {
      font-size: {{ section.settings.reviews_font_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .product-title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
      line-height: {{ section.settings.title_line_height_desktop }};
      letter-spacing: {{ section.settings.title_letter_spacing_desktop }}px;
      margin-bottom: {{ section.settings.title_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .product-description {
      font-size: {{ section.settings.description_font_size_desktop }}px;
      line-height: {{ section.settings.description_line_height_desktop }};
      letter-spacing: {{ section.settings.description_letter_spacing_desktop }}px;
      margin-bottom: {{ section.settings.description_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .description-icon {
      font-size: {{ section.settings.description_icon_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .pricing-container {
      margin-bottom: {{ section.settings.pricing_margin_bottom_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .current-price {
      font-size: {{ section.settings.current_price_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .original-price {
      font-size: {{ section.settings.original_price_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .sale-badge {
      font-size: {{ section.settings.sale_badge_size_desktop }}px;
    }

    #shopify-section-{{ section.id }}
    .cta-button {
      font-size: {{ section.settings.button_font_size_desktop }}px;
      padding: {{ section.settings.button_padding_vertical_desktop }}px{{ section.settings.button_padding_horizontal_desktop }}px;
    }
  }
</style>

<div class="product-grid-section">
  {% if section.settings.section_heading != blank %}
    <h2 class="section-heading">{{ section.settings.section_heading }}</h2>
    {% if section.settings.section_subtitle != blank %}
      <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
    {% endif %}
  {% endif %}

  {% if collection != blank and collection.products.size > 0 %}
    <ul class="products-grid">
      {% for product in collection.products limit: products_to_show %}
        <li class="product-card">
          <div class="product-image-wrapper">
            {% if product.featured_image != blank %}
              <img
                src="{{ product.featured_image | img_url: '600x' }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="{{ 600 | times: section.settings.image_aspect_ratio | divided_by: 100 | round }}"
                class="product-image">
            {% elsif show_placeholders %}
              <div class="placeholder-image">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}

            {% if section.settings.show_badge and product.metafields[section.settings.badge_metafield_namespace][section.settings.badge_metafield_key] != blank %}
              <div class="product-badge">
                {{ product.metafields[section.settings.badge_metafield_namespace][section.settings.badge_metafield_key] }}
              </div>
            {% elsif show_placeholders and section.settings.show_badge %}
              <div class="product-badge">
                DELTA-8 THC 25% / HHC 58%
              </div>
            {% endif %}
          </div>

          <div class="product-content">
            {% if section.settings.show_reviews %}
              <div class="product-reviews">
                <div class="stars" aria-label="Rating: {{ section.settings.default_rating }} out of 5">
                  {% for i in (1..5) %}
                    <span>★</span>
                  {% endfor %}
                </div>
                {% if section.settings.show_review_count %}
                  <span class="reviews-count">({{ section.settings.default_review_count }} REVIEWS)</span>
                {% endif %}
              </div>
            {% endif %}

            {% if product.title != blank %}
              <h3 class="product-title">{{ product.title }}</h3>
            {% elsif show_placeholders %}
              <h3 class="product-title">1G DISPOSABLE PEN 2.0</h3>
            {% endif %}

            {% if section.settings.show_description %}
              <div class="product-description">
                {% if use_metafield %}
                  {% assign metafield_value = product.metafields[section.settings.metafield_namespace][section.settings.metafield_key] %}
                  {% if metafield_value != blank %}
                    {% assign description_lines = metafield_value | split: '|' %}
                    {% for line in description_lines %}
                      {% if line != blank %}
                        <div class="product-description-item">
                          <span class="description-icon">{{ section.settings.description_icon }}</span>
                          <span>{{ line | strip }}</span>
                        </div>
                      {% endif %}
                    {% endfor %}
                  {% elsif show_placeholders %}
                    <div class="product-description-item">
                      <span class="description-icon">{{ section.settings.description_icon }}</span>
                      <span>High Potency</span>
                    </div>
                    <div class="product-description-item">
                      <span class="description-icon">{{ section.settings.description_icon }}</span>
                      <span>Energized & Happy</span>
                    </div>
                    <div class="product-description-item">
                      <span class="description-icon">{{ section.settings.description_icon }}</span>
                      <span>Blueberry & Earthy Richness</span>
                    </div>
                  {% endif %}
                {% else %}
                  {% if product.description != blank %}
                    {{ product.description | strip_html | truncate: section.settings.description_truncate_length }}
                  {% elsif show_placeholders %}
                    High quality disposable vape pen with premium ingredients and exceptional flavor profile.
                  {% endif %}
                {% endif %}
              </div>
            {% endif %}

            <div class="pricing-container">
              {% if product.compare_at_price > product.price %}
                <span class="current-price">${{ product.price | money_without_currency }}</span>
                <span class="original-price">${{ product.compare_at_price | money_without_currency }}</span>
                <span class="sale-badge">
                  {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round }}% off
                </span>
              {% elsif product.price > 0 %}
                <span class="current-price">${{ product.price | money_without_currency }}</span>
              {% elsif show_placeholders %}
                <span class="current-price">$40.00</span>
                <span class="original-price">$49.99</span>
                <span class="sale-badge">40% off</span>
              {% endif %}
            </div>

            {% if section.settings.button_text != blank %}
              <a href="{{ product.url }}" class="cta-button">
                {{ section.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  {% elsif show_placeholders %}
    <ul class="products-grid">
      {% for i in (1..products_to_show) %}
        <li class="product-card">
          <div class="product-image-wrapper">
            <div class="placeholder-image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            {% if section.settings.show_badge %}
              <div class="product-badge">
                DELTA-8 THC 25% / HHC 58%
              </div>
            {% endif %}
          </div>

          <div class="product-content">
            {% if section.settings.show_reviews %}
              <div class="product-reviews">
                <div class="stars" aria-label="Rating: {{ section.settings.default_rating }} out of 5">
                  {% for j in (1..5) %}
                    <span>★</span>
                  {% endfor %}
                </div>
                {% if section.settings.show_review_count %}
                  <span class="reviews-count">({{ section.settings.default_review_count }} REVIEWS)</span>
                {% endif %}
              </div>
            {% endif %}

            <h3 class="product-title">1G DISPOSABLE PEN 2.0</h3>

            {% if section.settings.show_description %}
              <div class="product-description">
                {% if use_metafield %}
                  <div class="product-description-item">
                    <span class="description-icon">{{ section.settings.description_icon }}</span>
                    <span>High Potency</span>
                  </div>
                  <div class="product-description-item">
                    <span class="description-icon">{{ section.settings.description_icon }}</span>
                    <span>Energized & Happy</span>
                  </div>
                  <div class="product-description-item">
                    <span class="description-icon">{{ section.settings.description_icon }}</span>
                    <span>Blueberry & Earthy Richness</span>
                  </div>
                {% else %}
                  High quality disposable vape pen with premium ingredients and exceptional flavor profile.
                {% endif %}
              </div>
            {% endif %}

            <div class="pricing-container">
              <span class="current-price">$40.00</span>
              <span class="original-price">$49.99</span>
              <span class="sale-badge">40% off</span>
            </div>

            {% if section.settings.button_text != blank %}
              <a href="#" class="cta-button">
                {{ section.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Product Grid",
    "class": "product-grid-section-wrapper",
    "settings": [
      {
        "type": "header",
        "content": "Collection Source"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "products_count",
        "min": 1,
        "max": 50,
        "step": 1,
        "default": 8,
        "label": "Products to show"
      },
      {
        "type": "checkbox",
        "id": "enable_placeholders",
        "label": "Enable placeholders in theme editor",
        "default": true,
        "info": "Shows placeholder content when no collection or products are available (only in theme editor)"
      }, {
        "type": "header",
        "content": "Section Settings"
      }, {
        "type": "color",
        "id": "section_bg_color",
        "label": "Background color",
        "default": "#000000"
      }, {
        "type": "range",
        "id": "section_padding_top_mobile",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Top padding (Mobile)",
        "default": 40
      }, {
        "type": "range",
        "id": "section_padding_bottom_mobile",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Bottom padding (Mobile)",
        "default": 40
      }, {
        "type": "range",
        "id": "section_padding_horizontal_mobile",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Horizontal padding (Mobile)",
        "default": 20
      }, {
        "type": "range",
        "id": "section_padding_top_desktop",
        "min": 0,
        "max": 300,
        "step": 4,
        "unit": "px",
        "label": "Top padding (Desktop)",
        "default": 80
      }, {
        "type": "range",
        "id": "section_padding_bottom_desktop",
        "min": 0,
        "max": 300,
        "step": 4,
        "unit": "px",
        "label": "Bottom padding (Desktop)",
        "default": 80
      }, {
        "type": "range",
        "id": "section_padding_horizontal_desktop",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Horizontal padding (Desktop)",
        "default": 40
      }, {
        "type": "header",
        "content": "Section Heading"
      }, {
        "type": "text",
        "id": "section_heading",
        "label": "Heading text",
        "default": "2 GRAMS VAPES"
      }, {
        "type": "text",
        "id": "section_subtitle",
        "label": "Subtitle text",
        "default": "Transform your bath into a luxurious escape with Kush Queen's handcrafted CBD bath bomb"
      }, {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#D4AF37"
      }, {
        "type": "select",
        "id": "heading_alignment_mobile",
        "label": "Alignment (Mobile)",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      }, {
        "type": "select",
        "id": "heading_alignment_desktop",
        "label": "Alignment (Desktop)",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      }, {
        "type": "text",
        "id": "heading_font_family",
        "label": "Font family",
        "default": "Arial, sans-serif",
        "info": "Enter CSS font-family value"
      }, {
        "type": "range",
        "id": "heading_font_size_mobile",
        "min": 16,
        "max": 72,
        "step": 2,
        "unit": "px",
        "label": "Font size (Mobile)",
        "default": 28
      }, {
        "type": "range",
        "id": "heading_font_size_desktop",
        "min": 20,
        "max": 120,
        "step": 2,
        "unit": "px",
        "label": "Font size (Desktop)",
        "default": 48
      }, {
        "type": "select",
        "id": "heading_font_weight",
        "label": "Font weight",
        "options": [
          {
            "value": "300",
            "label": "Light"
          },
          {
            "value": "400",
            "label": "Normal"
          },
          {
            "value": "500",
            "label": "Medium"
          },
          {
            "value": "600",
            "label": "Semibold"
          }, {
            "value": "700",
            "label": "Bold"
          }, {
            "value": "800",
            "label": "Extra Bold"
          }
        ],
        "default": "700"
      }, {
        "type": "range",
        "id": "heading_line_height_mobile",
        "min": 0.8,
        "max": 2.5,
        "step": 0.1,
        "label": "Line height (Mobile)",
        "default": 1.2
      }, {
        "type": "range",
        "id": "heading_line_height_desktop",
        "min": 0.8,
        "max": 2.5,
        "step": 0.1,
        "label": "Line height (Desktop)",
        "default": 1.2
      }, {
        "type": "range",
        "id": "heading_letter_spacing_mobile",
