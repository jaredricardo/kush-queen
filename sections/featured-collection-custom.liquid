{% liquid
  assign section_id = section.id
  assign collection = section.settings.collection
  assign product_limit = section.settings.product_limit
%}

<style>
  #shopify-section-{{ section_id }} .product-grid-wrapper {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.section_padding_top_mobile }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
    font-family: 'GOTHAM', sans-serif;
    border-top: 1px solid #000;
    border-bottom: 1px solid #000;
  }  

  div#PageContainer {
    margin-top: clamp(65px, 11vw, 75px) !important;
  }

  #MainContent .site-breadcumb{display: none !important;}

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .product-grid-wrapper {
      padding-top: {{ section.settings.section_padding_top_desktop }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_desktop }}px;
    }
  }

  {% if section.settings.heading_text != blank or section.settings.subheading_text != blank %}
    #shopify-section-{{ section_id }} .section-header {
        margin-bottom: {{ section.settings.heading_margin_bottom_mobile }}px;
        text-align: center;
    }
    
    @media (min-width: 768px) {
        #shopify-section-{{ section_id }} .section-header {
            text-align: {{ section.settings.heading_alignment }};
        margin-bottom: {{ section.settings.heading_margin_bottom_desktop }}px;
      }
    }
  {% endif %}

  {% if section.settings.heading_text != blank %}
    #shopify-section-{{ section_id }} .section-heading {
      color: {{ section.settings.heading_color }};
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      font-weight: {{ section.settings.heading_font_weight }};
      line-height: {{ section.settings.heading_line_height_mobile }};
      margin: 0;
    font-family: 'Room205', sans-serif;
    }

    @media (min-width: 768px) {
      #shopify-section-{{ section_id }} .section-heading {
        font-size: {{ section.settings.heading_font_size_desktop }}px;
        line-height: {{ section.settings.heading_line_height_desktop }};
      }
    }
  {% endif %}

  {% if section.settings.subheading_text != blank %}
    #shopify-section-{{ section_id }} .section-subheading {
      color: {{ section.settings.subheading_color }};
      font-size: {{ section.settings.subheading_font_size_mobile }}px;
      font-weight: {{ section.settings.subheading_font_weight }};
      line-height: {{ section.settings.subheading_line_height_mobile }};
      margin: 8px 0 0 0;
    }

    @media (min-width: 768px) {
      #shopify-section-{{ section_id }} .section-subheading {
        font-size: {{ section.settings.subheading_font_size_desktop }}px;
        line-height: {{ section.settings.subheading_line_height_desktop }};
      }
    }
  {% endif %}

  #shopify-section-{{ section_id }} .product-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns_mobile }}, 1fr);
    gap: {{ section.settings.grid_gap_mobile }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .product-grid {
      grid-template-columns: repeat({{ section.settings.grid_columns_desktop }}, 1fr);
      gap: {{ section.settings.grid_gap_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .product-card {
    background-color: {{ section.settings.card_bg_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding_mobile }}px;
    display: flex;
    border: 1px solid #D1D1D1;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .product-card {
      padding: {{ section.settings.card_padding_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .product-image-container {
    background-color: {{ section.settings.image_bg_color }};
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    margin-bottom: 16px;
  }

  #shopify-section-{{ section_id }} .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  #shopify-section-{{ section_id }} .product-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

  {% if section.settings.show_reviews %}
    #shopify-section-{{ section_id }} .product-reviews {
      display: flex;
      align-items: center;
      gap: 6px;
      margin-bottom: {{ section.settings.reviews_margin_bottom_mobile }}px;
    }

    @media (min-width: 768px) {
      #shopify-section-{{ section_id }} .product-reviews {
        margin-bottom: {{ section.settings.reviews_margin_bottom_desktop }}px;
      }
    }

    #shopify-section-{{ section_id }} .review-stars {
      display: flex;
      gap: 2px;
      color: {{ section.settings.star_color }};
    }

    #shopify-section-{{ section_id }} .review-count {
      color: {{ section.settings.reviews_text_color }};
      font-size: {{ section.settings.reviews_font_size_mobile }}px;
      font-weight: {{ section.settings.reviews_font_weight }};
      margin: 0;
    }

    @media (min-width: 768px) {
      #shopify-section-{{ section_id }} .review-count {
        font-size: {{ section.settings.reviews_font_size_desktop }}px;
      }
    }
  {% endif %}

  {% if section.settings.concentration_source == 'metafield' %}
    #shopify-section-{{ section_id }} .product-concentration {
      color: {{ section.settings.concentration_color }};
      font-size: {{ section.settings.concentration_font_size_mobile }}px;
      font-weight: {{ section.settings.concentration_font_weight }};
      line-height: {{ section.settings.concentration_line_height_mobile }};
      margin: 0 0 {{ section.settings.concentration_margin_bottom_mobile }}px 0;
          display: inline-block;
    padding: 3px 6px;
    background: #F5F5F5;
    width: 100%;
    max-width: max-content;
    border-radius: 5px;    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
    }

    @media (min-width: 768px) {
      #shopify-section-{{ section_id }} .product-concentration {
        font-size: {{ section.settings.concentration_font_size_desktop }}px;
        line-height: {{ section.settings.concentration_line_height_desktop }};
        margin-bottom: {{ section.settings.concentration_margin_bottom_desktop }}px;
      }
    }
  {% endif %}

  #shopify-section-{{ section_id }} .product-title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_font_size_mobile }}px;
    font-weight: {{ section.settings.title_font_weight }};
    font-family: 'Room205', sans-serif;
    line-height: {{ section.settings.title_line_height_mobile }};
    margin: 0 0 {{ section.settings.title_margin_bottom_mobile }}px 0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .product-title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
      line-height: {{ section.settings.title_line_height_desktop }};
      margin-bottom: {{ section.settings.title_margin_bottom_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .product-title a {
    color: inherit;
    text-decoration: none;
  }

  {% if section.settings.description_source != 'none' %}
    #shopify-section-{{ section_id }} .product-description {
      color: {{ section.settings.description_color }};
      font-size: {{ section.settings.description_font_size_mobile }}px;
      font-weight: {{ section.settings.description_font_weight }};
      line-height: {{ section.settings.description_line_height_mobile }};
      margin: 0 0 {{ section.settings.description_margin_bottom_mobile }}px 0;        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    @media (min-width: 768px) {
      #shopify-section-{{ section_id }} .product-description {
        font-size: {{ section.settings.description_font_size_desktop }}px;
        line-height: {{ section.settings.description_line_height_desktop }};
        margin-bottom: {{ section.settings.description_margin_bottom_desktop }}px;
      }
    }
  {% endif %}

  #shopify-section-{{ section_id }} .product-pricing {
    display: flex;
    align-items: center;
    gap: clamp(3px, 1vw, 10px);
    flex-wrap: wrap;
    margin-top: auto;
    margin-bottom: {{ section.settings.pricing_margin_bottom_mobile }}px;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .product-pricing {
      margin-bottom: {{ section.settings.pricing_margin_bottom_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .price-main {
    color: {{ section.settings.price_color }};
    font-size: {{ section.settings.price_font_size_mobile }}px;
    font-weight: {{ section.settings.price_font_weight }};
    margin: 0;
    font-family: 'Room205', sans-serif;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .price-main {
      font-size: {{ section.settings.price_font_size_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .price-compare {
    color: {{ section.settings.compare_price_color }};
    font-size: {{ section.settings.compare_price_font_size_mobile }}px;
    text-decoration: line-through;
    margin: 0;
    font-family: 'Room205', sans-serif;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .price-compare {
      font-size: {{ section.settings.compare_price_font_size_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .discount-badge {
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    font-size: clamp({{ section.settings.badge_font_size | times: 0.6 }}px, 2.1vw, {{ section.settings.badge_font_size }}px);
    padding: clamp({{ section.settings.badge_padding | times: 0.6 }}px, 1.5vw,{{ section.settings.badge_padding }}px) clamp({{ section.settings.badge_padding }}px, 1.5vw, {{ section.settings.badge_padding | times: 1.5 }}px);
    border-radius: {{ section.settings.badge_border_radius }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: normal;
    line-height: 1.5;
    margin-left: auto;
  }

  #shopify-section-{{ section_id }} .product-cta {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_mobile }}px;
    font-size: {{ section.settings.button_font_size_mobile }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    display: inline-block;
    width: 100%;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section_id }} .product-cta {
      padding: {{ section.settings.button_padding_desktop }}px;
      font-size: {{ section.settings.button_font_size_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .product-cta:hover {
    background-color: {{ section.settings.button_bg_color_hover }};
    color: {{ section.settings.button_text_color_hover }};
  }

  #shopify-section-{{ section_id }} .product-cta:focus-visible {
    outline: 2px solid {{ section.settings.button_bg_color }};
    outline-offset: 2px;
  }
</style>

<div class="product-grid-wrapper">
  <div class="page-width">
    {% if section.settings.heading_text != blank or section.settings.subheading_text != blank %}
      <div class="section-header">
        {% if section.settings.heading_text != blank %}
          <h2 class="section-heading">{{ section.settings.heading_text }}</h2>
        {% endif %}
        {% if section.settings.subheading_text != blank %}
          <p class="section-subheading">{{ section.settings.subheading_text }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if collection != blank %}
      <ul class="product-grid">
        {% for product in collection.products limit: product_limit %}
          <li class="product-card" data-product-id="{{ product.id }}" data-variant-id="{{ product.selected_or_first_available_variant.id }}">
            <a href="{{ product.url }}" class="product-image-container">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  srcset="{{ product.featured_image | image_url: width: 400 }} 400w,
                          {{ product.featured_image | image_url: width: 600 }} 600w,
                          {{ product.featured_image | image_url: width: 800 }} 800w"
                  sizes="(min-width: 768px) calc((100vw - 120px) / {{ section.settings.grid_columns_desktop }}), calc((100vw - 40px) / {{ section.settings.grid_columns_mobile }})"
                  alt="{{ product.featured_image.alt | escape | default: product.title }}"
                  class="product-image"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | divided_by: section.settings.image_aspect_ratio | round }}"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'product-image' }}
              {% endif %}
            </a>

            <div class="product-content">
              {% assign review_count = product.metafields.reviewscouk.total %}
              {% if section.settings.show_reviews and review_count != blank %}
                <div class="product-reviews">
                  <div class="review-stars" aria-label="5 out of 5 stars">
                    {% for i in (1..5) %}
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="currentColor" aria-hidden="true">
                        <path d="M7 0l1.796 5.528h5.814l-4.703 3.416 1.796 5.528L7 11.056l-4.703 3.416 1.796-5.528L-.61 5.528h5.814z"/>
                      </svg>
                    {% endfor %}
                  </div>
                  <p class="review-count">({{ review_count }} REVIEWS)</p>
                </div>
              {% endif %}

              {% if section.settings.concentration_source == 'metafield' %}
                {% liquid
                  assign concentration_value = product.metafields[section.settings.concentration_namespace][section.settings.concentration_key]
                %}
                {% if concentration_value != blank %}
                  <p class="product-concentration">{{ concentration_value }}</p>
                {% endif %}
              {% endif %}

              <h3 class="product-title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              {% if section.settings.description_source != 'none' %}
                {% liquid
                  assign description_text = ''
                  if section.settings.description_source == 'product_description'
                    assign description_text = product.description | strip_html | truncatewords: 20
                  elsif section.settings.description_source == 'metafield'
                    assign description_text = product.metafields[section.settings.description_namespace][section.settings.description_key]
                  endif
                %}
                {% if description_text != blank %}
                  <p class="product-description">{{ description_text }}</p>
                {% endif %}
              {% endif %}

              <div class="product-pricing">
                <p class="price-main">
                  {{ product.price | money }}
                </p>
                {% if product.compare_at_price > product.price %}
                  <p class="price-compare">
                    {{ product.compare_at_price | money }}
                  </p>
                  {% liquid
                    assign discount_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round
                  %}
                  <span class="discount-badge">{{ discount_percent }}% OFF</span>
                {% endif %}
              </div>

              {% if product.available %}
                <a href="{{ product.url }}" class="product-cta">
                  {{ section.settings.button_text }}
                </a>
              {% else %}
                <a href="{{ product.url }}" disabled class="product-cta">
                  Sold Out
                </a>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p style="text-align: center; padding: 40px 0;">Please select a collection in the theme editor.</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product Grid",
  "tag": "section",
  "class": "product-grid-section",
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Background color",
      "default": "#F5F5F0"
    },
    {
      "type": "range",
      "id": "section_padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding (desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding (mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (mobile)",
      "default": 40
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading",
      "default": "THC BATH BOMBS"
    },
    {
      "type": "textarea",
      "id": "subheading_text",
      "label": "Subheading",
      "default": "Transform your bath into a luxurious escape with Kush Queen's handcrafted CBD bath bomb"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignment",
      "options": [
        {
