<section class="qck-featured-product">
  <div class="qck-featured-product-container">
    {% if collection.metafields.custom.qck_featured_product != blank %}
      {%- assign product = all_products[collection.metafields.custom.qck_featured_product] -%}
      <div class="qck-featured-product-wrapper">
        <div class="qck-featured-product-gallery">
          <div class="qck-featured-product-main-image">
            {% if product.featured_media != blank %}
              <img
                src="{{ product.featured_media | image_url: width: 600 }}"
                alt="{{ product.featured_media.alt | escape }}"
                id="qck-featured-product-main-img"
                loading="lazy"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          {% if product.media.size > 1 %}
            <div class="qck-featured-product-thumbnails">
              {% for media in product.media limit: 5 %}
                <div class="qck-featured-product-thumbnail{% if forloop.first %} active{% endif %}">
                  <img
                    src="{{ media | image_url: width: 150 }}"
                    alt="{{ media.alt | escape }}"
                    loading="lazy"
                    data-full-img="{{ media | image_url: width: 600 }}"
                    onclick="document.getElementById('qck-featured-product-main-img').src = this.getAttribute('data-full-img'); 
                            const thumbs = document.querySelectorAll('.qck-featured-product-thumbnail');
                            thumbs.forEach(t => t.classList.remove('active'));
                            this.parentElement.classList.add('active');"
                  >
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
        
        <div class="qck-featured-product-details">
          <h2 class="qck-featured-product-title">{{ product.title | escape }}</h2>
          
          <div class="qck-featured-product-price">
            {% if product.compare_at_price > product.price %}
              <span class="qck-featured-price-sale">{{ product.price | money }}</span>
              <span class="qck-featured-price-compare">{{ product.compare_at_price | money }}</span>
              <span class="qck-featured-price-discount">-{{ product.compare_at_price_max | minus: product.price | times: 100.0 | divided_by: product.compare_at_price_max | round }}%</span>
            {% else %}
              <span class="qck-featured-price-regular">{{ product.price | money }}</span>
            {% endif %}
          </div>
          
          {% if section.settings.show_shipping_text %}
            <div class="qck-featured-product-shipping">
              <span class="qck-featured-shipping-text">+ FREE SHIPPING</span>
            </div>
          {% endif %}
          
          <div class="qck-featured-product-description">
              {{ product.description | strip_html | truncatewords: 30 }}
          </div>
                      <a href="{{ product.url }}" class="qck-featured-product-button-link">
              <button class="qck-featured-product-button">SHOP NOW</button>
            </a>
        </div>
      </div>
    {% else %}
      <p>Please add a Product to your Collection Metafields.</p>
    {% endif %}
  </div>
</section>
{% if section.settings.show_blog %}
<section class="qck-blog">
  <div class="qck-blog-feature">
    <h2 class="qck-blog-heading">Check out our Blog</h2>
  
  {%- assign blog = blogs[section.settings.blog] -%}
  
  {% if blog != blank %}
    <div class="qck-blog-grid">
      {% for article in blog.articles limit: 3 %}
        <div class="qck-blog-card">
          {% if article.image %}
            <div class="qck-blog-image">
              <img
                src="{{ article.image | img_url: '400x' }}"
                alt="{{ article.title | escape }}"
                loading="lazy"
              >
            </div>
          {% else %}
            <div class="qck-blog-image qck-blog-image-placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
          
          <div class="qck-blog-content">
            <h3 class="qck-blog-title">{{ article.title }}</h3>
            
            <div class="qck-blog-excerpt">
              {% if article.excerpt != blank %}
                {{ article.excerpt | strip_html | truncatewords: 20 }}
              {% else %}
                {{ article.content | strip_html | truncatewords: 20 }}
              {% endif %}
            </div>
            
            <div class="qck-blog-button-wrapper">
              <a href="{{ article.url }}" class="qck-blog-button">Learn More</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p class="qck-blog-empty">Please select a blog in the section settings.</p>
  {% endif %}
</div>
