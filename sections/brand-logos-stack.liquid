{% schema %}
{
  "name": "Featured Logos",
  "tag": "section",
  "class": "featured-logos-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FEATURED IN"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Logos",
      "blocks": [
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}

<div class="page-width stack_width_custom">
  <div class="featured-logos-wrapper">
    <h2 class="featured-logos-heading">{{ section.settings.heading }}</h2>
    <div class="featured-logos-list">
      {% for block in section.blocks %}
        {% if block.settings.logo %}
          <div class="featured-logo">
            <img src="{{ block.settings.logo | image_url: width: 200 }}" alt="Logo" loading="lazy">
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} {
    border-top: 1px solid #000;
    border-bottom: 1px solid #000;
  }
  .featured-logos-wrapper {
    padding: 30px 0px;
    text-align: center;
        display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .stack_width_custom {
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .featured-logos-heading {
    letter-spacing: 1px;
    line-height: normal;
    margin-bottom: 0px;
    font-family: 'Room205';
    font-size: 42px;
  }

  .featured-logos-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
  }

  .featured-logo img {
    max-height: 60px;
    object-fit: contain;
    display: block;
  }

  @media screen and (max-width: 768px) {
    .featured-logos-heading {
      font-size: 26px;
      margin-bottom: 15px;
    }
    .stack_width_custom {
    padding-left: 0rem;
    padding-right: 0rem;
  }

    .featured-logos-list {
      gap: 20px;
    }

    .featured-logo img {
      max-height: 30px;
    }
  }
</style>
