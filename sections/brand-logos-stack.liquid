{% schema %}
{
  "name": "Brand Logos Carousel",
  "settings": [
    {
      "type": "header",
      "content": "Add your brand logos and a common separator image"
    },
    {
      "type": "image_picker",
      "id": "separator_image",
      "label": "Separator image (used between logos)",
      "info": "Recommended: SVG or small PNG"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Brand Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Logos Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="page-width stack_padding_stem">
  <div class="logo-slider">
    <div class="logo-track">
      {% for block in section.blocks %}
        <div class="logo">
          {% if block.settings.logo_image %}
            <img src="{{ block.settings.logo_image | image_url: width: 150 }}" alt="Brand Logo">
          {% endif %}
        </div>
        {% if section.settings.separator_image %}
          <div class="separator">
            <img src="{{ section.settings.separator_image | image_url: width: 40 }}" alt="Separator">
          </div>
        {% endif %}
      {% endfor %}

      {%- comment -%}
        Duplicate for seamless scroll
      {%- endcomment -%}
      {% for block in section.blocks %}
        <div class="logo">
          {% if block.settings.logo_image %}
            <img src="{{ block.settings.logo_image | image_url: width: 150 }}" alt="Brand Logo">
          {% endif %}
        </div>
        {% if section.settings.separator_image %}
          <div class="separator">
            <img src="{{ section.settings.separator_image | image_url: width: 40 }}" alt="Separator">
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .stack_padding_stem {
    padding-left: 2rem;
    padding-left: 2rem;
  }
     .logo-slider {
       overflow: hidden;
       padding: 20px 0;
       white-space: nowrap;
       height: 94px;
     }

     .logo-slider .logo-track {
       display: flex;
       animation: scroll 25s linear infinite;
       align-items: center;
       gap: 40px;
       height: 100%;
     }

    .logo-slider .logo {
       display: flex;
       align-items: center;
       justify-content: center;
       width: auto;
       flex-shrink: 0;
    }
     .logo-slider .separator {
       display: flex;
       align-items: center;
       justify-content: center;
       height: 29px;
       width: 25px;
       flex-shrink: 0;
     }
    .logo-slider .logo {
       height: 44px;
     }
     .logo-slider .logo img {
       height: 85%;
       width: 100%;
       object-fit: contain;
       display: block;
     }

     @keyframes scroll {
       0% {
         transform: translateX(0%);
       }
       100% {
         transform: translateX(-50%);
       }
     }

    @media(max-width: 768px) {

      .logo-slider {
      height: 65px;
  }
      .logo-slider .logo {
       height: 44px;
     }
      .stack_padding_stem {
    padding-left: 0rem;
    padding-left: 0rem;
  }
    }
</style>
