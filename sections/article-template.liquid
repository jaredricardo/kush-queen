<article class="page-width">
     {% if article.image != blank %}
  <div class="post-thumbnail">
    <img src="{{ article.image | img_url: 'master' }}" alt="" class="hvrbox-layer_bottom margin_btm">
  </div>
  {% endif %}
  <div class="page-width-warp">
    <div class="#">
      <div class="blog_detail">
        <div class="rte">
          {% if article.tags.size > 0 %}
          <div class="article__tags rte">
            <ul class="list--inline" aria-label="{{ 'blogs.article.tags' | t }}">
              {% for tag in article.tags %}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: tag %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}
   
              {% if tag  contains 'grid_' %}
              <li>
                <a href="/blogs/all/tagged/{{ tag | handle }}" class="article__grid-tag">{{ tag | split: "_" | last }}</a>
              </li>  
              {% endif %}
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          {% if section.settings.blog_show_date %}
          <span class="article__date">
            {{ article.published_at | time_tag: format: 'date' }}
          </span>
          {% endif %}
          <div class="entry-content">
            <div class="product-layer_top">
              <div class="product-text">      
                {{ article.content }}
              </div>
            </div>
          </div>
        </div>
      </div>

     
        <div class="previous_article-box">
          {% if article.tags.size > 0 %}
          <div class="article__tags rte">
            <ul class="list--inline" aria-label="{{ 'blogs.article.tags' | t }}">
              {% for tag in article.tags %}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: tag %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}
    
              {% if tag  contains 'tags_' %}
              <li>
                <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">  {{ tag | split: "_" | last }}</a>
              </li>  
              {% endif %}
              {% endfor %}
            </ul>
          </div>
          {% endif %}

          <ul>
            <li>
              {% if blog.previous_article.url != blank %}
              <div class="thumbnail-nav">
                <a href="{{ blog.previous_article.url }}" class=""> 
                  <img class=""src="{{ blog.previous_article.image | img_url: 'master' }}" alt="">
                </a>          
              </div>
              <div class="nav-content">
                <div class="next-nav">
                  <a href="{{ blog.previous_article }}">PREVIOUS POST</a>        
                </div>
                <h4 class="post-title"><a href="{{ blog.previous_article.url }}">{{ blog.previous_article.title }}</a></h4>  
              </div>
              {% endif %}
            </li>
            <li>

{% if blog.next_article != blank %}
              <div class="next-nav-right">

                <div class="nav-content">
                  <div class="next-nav">
                    <a href="{{ blog.next_article }}">NEXT POST</a>        
                  </div>
                  <h4 class="post-title"><a href="{{ blog.next_article.url }}">{{ blog.next_article.title }}</a></h4>  
                </div>
                <div class="thumbnail-nav">
                  <a href="{{ blog.next_article.url }}" class=""> 
                    <img class=""src="{{ blog.next_article.image | img_url: 'master' }}" alt="">
                  </a>          
                </div>
              </div>

            </li>
            {% endif %}
          </ul>

        </div>
  
        {% include 'related-posts' %}
  
    </div>
  </div>
 
</article>





