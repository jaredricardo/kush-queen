<section class="qck-product-grid-new">
  <div class="qck-custom-product-grid">
    {% if section.settings.collection != blank %}
    {%- assign collection = collections[section.settings.collection] -%}
    {% else %}
    {%- assign collection = collection -%}
    {% endif %}




    {% if collection != blank %}
      <ul class="qck-product-grid">
        {% for product in collection.products %}
          <li class="qck-grid-item {% if forloop.index > 4 %}qck-hidden-product{% endif %}">
            <a href="{{ product.url | within: collection }}" class="qck-product-link">
              <div class="qck-product-image">
                {% if product.featured_media != blank %}
                  <img
                    src="{{ product.featured_media | image_url: width: 500 }}"
                    alt="{{ product.featured_media.alt | escape }}"
                    loading="lazy"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <h3 class="qck-product-title">{{ product.title | escape }}</h3>
              <div class="qck-product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="qck-price-sale">{{ product.price | money }}</span>
                  <span class="qck-price-compare">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="qck-price-regular">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </a>
              <a href="{{ product.url | within: collection }}" class="qck-product-button-link">
                <button class="qck-product-button">
                  Choose Options
                </button>
              </a>
          </li>
        {% endfor %}
      </ul>
      
      {% if collection.products.size > 4 %}
        <div class="qck-load-more-container">
          <button class="qck-load-more-button" id="qck-load-more">
            Load More Products
          </button>
        </div>
      {% endif %}
    {% else %}
      <p>Please select a collection in the section settings.</p>
    {% endif %}
  </div>
</section>
